<div class="container ms-auto col-6">

    <div class="row">

        <div class="card">
            <div class="card-body">
                Generation: <b><%=@grid[0] %></b><br>
                <br>
                <br>
                <table style="border-collapse: collapse;">
               
                    <%= render 'game/grid' %>

                </table>
                <div class="d-grid mt-3 gap-2 d-md-block">
                    <input type="range" class="form-range" min="0.1" max="1" id="speed">
                    <button type="button" class="btn btn-primary" id="pause">Pause</button>
                    <button type="button" class="btn btn-primary" id="gotoend">Go To End</button>
                </div>
            </div>
        </div>

    </div>

</div>
