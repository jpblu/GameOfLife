<div class="container ms-auto col-6">

    <div class="row">
        <% if @isvalid == true %>
            <div class="alert alert-success" role="alert">
                Validation OK!
            </div>
            <div class="card">
                <div class="card-body">
                    <h5>Game Input</h5>
                    Generation: <b><%=@gol_gen %></b><br>
                    Grid: <b><%=@gol_row %></b> x <b><%=@gol_col %></b><br>
                    <br>
                    <table style="border-collapse: collapse;">
                    <%  @grid.each do |row| %>
                        <tr>
                        <%  row.each do |col| %>
                                <td class="<%if col == 0 %>bg-light <% else %> bg-danger <% end %>" style="width: 20px; height: 20px; border: 1px solid black;"></td>
                        <%  end  %>
                        </tr>
                    <%  end %>
                    </table>
                    <div class="d-grid mt-3 gap-2 d-md-block">
                        <%= form_with url: "/game", method: :post do |form| %>

                            <div class="d-grid gap-2 d-md-block">
                                <%= form.hidden_field :gol_gen, value: @gol_gen %>
                                <%= form.hidden_field :gol_row, value: @gol_row %>
                                <%= form.hidden_field :gol_col, value: @gol_col  %>
                                <%= form.hidden_field :grid, value: @grid.to_json  %>
                                <%= form.submit 'Start', class: 'btn btn-success' %>
                            </div>

                        <% end %>

                    </div>
                </div>
            </div>
        <% else %>
            <div class="alert alert-danger" role="alert">
                <%= @err_out %>
            </div>
            <div class="d-grid gap-2 d-md-block">
                <a href="/" class="btn btn-primary">Retry</a>
            </div>
        <% end %>
    </div>

</div>